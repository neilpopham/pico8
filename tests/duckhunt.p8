__lua__

function pd_rotate(x,y,rot,mx,my,w,flip,scale)
  scale=scale or 1
  w*=scale*4

  local cs, ss = cos(rot)*.125/scale,sin(rot)*.125/scale
  local sx, sy = mx+cs*-w, my+ss*-w
  local hx = flip and -w or w

  local halfw = -w
  for py=y-w, y+w do
    tline(x-hx, py, x+hx, py, sx-ss*halfw, sy+cs*halfw, cs, ss)
    halfw+=1
  end
end

a=0
s=8
y=128

function _update60()
 a-=.01
 s-=.15
 y-=2
end

function _draw()
    cls()
    if s>0 then
        pd_rotate(32,y,a,1.5,1.5,1.4,1,s)
        pd_rotate(96,y,a,3.5,1.5,1.4,1,s)
    end
end



