pico-8 cartridge // http://www.pico-8.com
version 43
__lua__

function _init()
    level=1
    x=60
    y=88
    dx=0
    dy=0
end

function _update60()
    if btn(0) then dx-=1 end
    if btn(1) then dx+=1 end
    dx=mid(-4,dx,4)
    dx*=.7
    hit=false
    local tx=(x+dx+(dx>0 and 7 or 0))\8
    for ty in all({y\8,(y+7)\8}) do
        local s=mget(tx+(level-1)*16,ty)
        if fget(s,0) then
            hit=true
            break
        end
    end
    if hit then
        x=tx*8+(dx>0 and -8 or 8)
        dx=0
    end
    x+=dx

    if btn(4) then dy-=1 end
    dy+=.3
    dy=mid(-4,dy,4)
    hit=false
    local ty=(y+dy+(dy>0 and 7 or 0))\8
    for tx in all({x\8,(x+7)\8}) do
        s=mget(tx+(level-1)*16,ty)
        if fget(s,0) then
            hit=true
            break
        end
    end
    if hit then
        y=ty*8+(dy>0 and -8 or 8)
        dy=0
    end
    y+=dy
    if y<0 then
        level+=1
        y=128+y
    elseif y>127 then
        level-=1
        y=128-y
    end
end

function _draw()
    cls(0)
    map((level-1)*16, 0, 0, 0, 16, 16)
    spr(6,x,y)
    print('l'..level,2,1,7)
end

